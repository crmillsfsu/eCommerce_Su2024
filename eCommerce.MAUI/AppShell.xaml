<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="eCommerce.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:eCommerce.MAUI"
    xmlns:views="clr-namespace:eCommerce.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="eCommerce.MAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:InventoryView}"
        Route="Inventory" />
    <ShellContent
        Title="Product"
        ContentTemplate="{DataTemplate views:ProductView}"
        Route="Product" />
    <ShellContent
        Title="Import Wizard"
        ContentTemplate="{DataTemplate views:ImportView}"
        Route="Import" />
    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate views:ShopView}"
        Route="Shop" />
    <ShellContent
        Title="New Cart"
        ContentTemplate="{DataTemplate views:CartView}"
        Route="Cart" />
</Shell>
